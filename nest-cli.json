{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts",
            ".enum.ts"
          ],
          "introspectComments": true
        }
      }
    ],
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "clash-client": {
      "type": "library",
      "root": "libs/clash-client",
      "entryFile": "index",
      "sourceRoot": "libs/clash-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/clash-client/tsconfig.lib.json"
      }
    },
    "discord-oauth": {
      "type": "library",
      "root": "libs/discord-oauth",
      "entryFile": "index",
      "sourceRoot": "libs/discord-oauth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/discord-oauth/tsconfig.lib.json"
      }
    },
    "google-sheet": {
      "type": "library",
      "root": "libs/google-sheet",
      "entryFile": "index",
      "sourceRoot": "libs/google-sheet/src",
      "compilerOptions": {
        "tsConfigPath": "libs/google-sheet/tsconfig.lib.json"
      }
    }
  }
}